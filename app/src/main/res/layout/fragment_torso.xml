<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".torso">

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="463dp">

        <RadioButton
            android:id="@+id/t1"
            android:layout_width="124dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/upperbody"
            android:buttonTint="#f5a742"
            android:paddingHorizontal="10dp"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/t2"
            android:layout_width="124dp"
            android:buttonTint="#f5a742"
            android:paddingHorizontal="10dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/tanktop" />

        <RadioButton
            android:id="@+id/t3"
            android:layout_width="124dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:checked="true"
            android:paddingHorizontal="10dp"
            android:buttonTint="#f5a742"
            android:drawableLeft="@drawable/teeshirt" />

        <RadioButton
            android:id="@+id/t4"
            android:layout_width="124dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:buttonTint="#f5a742"
            android:drawableLeft="@drawable/quaterseeve" />

        <RadioButton
            android:id="@+id/t5"
            android:layout_width="124dp"
            android:layout_height="84dp"
            android:buttonTint="#f5a742"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/fullsleeve" />

    </RadioGroup>
</FrameLayout>
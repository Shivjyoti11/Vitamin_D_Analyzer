<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Regster2">

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/buttonstyle"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="162dp"
        android:layout_height="63dp"
        android:layout_marginStart="196dp"
        android:gravity="center"
        android:text="cm"
        android:textColor="#000000"
        android:textColorHint="#8F7C7C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ht" />

    <EditText
        android:id="@+id/ht"
        android:layout_width="166dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:gravity="center"
        android:hint="height(1 in=2.45cm)"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#8F7C7C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wt" />

    <EditText
        android:id="@+id/wt"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Weight"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#8F7C7C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Vegetarian"
        android:textColor="#000000"
        android:textColorHint="#8F7C7C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ht" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="131dp"
        android:layout_height="77dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="kg"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/wt"
        app:layout_constraintTop_toTopOf="@+id/wt" />

    <ImageView
        android:id="@+id/type1"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/st1" />

    <ImageView
        android:id="@+id/type2"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/type1"
        app:layout_constraintTop_toTopOf="@+id/type1"
        app:srcCompat="@drawable/st2" />

    <ImageView
        android:id="@+id/type3"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/type2"
        app:layout_constraintTop_toTopOf="@+id/type2"
        app:srcCompat="@drawable/st3" />

    <ImageView
        android:id="@+id/type4"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type1"
        app:srcCompat="@drawable/st4" />

    <ImageView
        android:id="@+id/type5"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/type4"
        app:layout_constraintTop_toTopOf="@+id/type4"
        app:srcCompat="@drawable/st5" />

    <ImageView
        android:id="@+id/type6"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/type5"
        app:layout_constraintTop_toTopOf="@+id/type5"
        app:srcCompat="@drawable/st6" />

</androidx.constraintlayout.widget.ConstraintLayout>